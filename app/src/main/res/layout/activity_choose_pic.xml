<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="telecom.piim2.ChoosePic">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/bRequest"
        android:layout_below="@+id/bCamera" />

    <Button
        android:text="Crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bCrop"
        android:background="@drawable/blue_button"
        android:textColor="@drawable/button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bCamera" />

    <Button
        android:text="Analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bRequest"
        android:background="@drawable/blue_button"
        android:textColor="@drawable/button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        android:id="@+id/pBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <Button
        android:text="Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bGallery"
        android:background="@drawable/blue_button"
        android:textColor="@drawable/button_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bCamera"
        android:background="@drawable/blue_button"
        android:textColor="@drawable/button_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Choose a picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/text"
        android:textAppearance="@android:style/TextAppearance.Material.DialogWindowTitle"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_below="@+id/bGallery"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
